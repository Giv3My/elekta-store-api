<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <style>
      @import
      url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap'); *
      { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Poppins', sans-serif;
      } h1, h2, h3, h4, h5, h6, p { color: #333333; } .wrapper { padding: 50px; }
      .email-top h1 { margin-right: 20px; display: inline-block; font-weight: 600;
      font-size: 28px; } .email-top p { display: inline-block; vertical-align: unset;
      font-size: 20px; } .email-top ~ h2 { margin-top: 30px; font-weight: 600; font-size:
      20px; } .email-top ~ p { margin-top: 30px; font-size: 18px; } .order-total { margin:
      50px auto 0; display: table; } .order-total h3 { margin-bottom: 20px; font-size:
      20px; text-align: center; } .order-total > div { max-width: 300px; margin: 0 auto;
      display: table; } .order-total > div > h4 { margin-top: 10px; font-size: 18px; }
      .order-total > div > h4 > span { color: #049af8; } .order-body { max-width: 450px;
      margin: 0 auto; display: table; } .order-body > div { margin-top: 30px; text-align:
      center; } .order-body > div > h4 { font-size: 20px; margin-bottom: 20px; }
      .order-body > div > p { margin-top: 10px; font-size: 16px; text-transform:
      capitalize; } .link-button { display: table; width: 200px; height: 50px; margin:
      30px auto 0; text-decoration: none; background-color: #049af8; } .link-button > p {
      display: table-cell; vertical-align: middle; font-size: 16px; text-align: center;
      color: #fff; } .separator { display: inline-block; width: 100%; border-top: 1px
      solid #bdbdbd; }
    </style>
  </head>
  <body>
    <div class='wrapper'>
      <div class='email-top'>
        <h1>{{contacts.firstName}} {{contacts.lastName}}</h1>
        <p>Order #{{id}}</p>
      </div>
      <h2>Thank you for your order</h2>
      <p>
        We've received your order and will contact you as soon as your package is shipped.
        You can find your purchase information below.
      </p>
      <div class='order-total'>
        <h3>Order Total</h3>
        <div>
          <h4><span>Price: </span> {{price}}$</h4>
          <h4><span>Quantity: </span> {{quantity}}</h4>
        </div>
        <span class='separator'></span>
      </div>
      <div class='order-body'>
        <div>
          <h4>Shipping</h4>
          <p>{{contacts.firstName}} {{contacts.lastName}}</p>
          <p>{{contacts.address}}</p>
          <p>{{contacts.city}}</p>
          <p>{{contacts.postcode}}</p>
        </div>
        <div>
          <h4>Payment method</h4>
          <p>{{paymentType}} **** **** ****</p>
        </div>
        <span class='separator'></span>
      </div>
      <a class='link-button' href={{client_url}}>
        <p>Make more purchases</p>
      </a>
    </div>
  </body>
</html>